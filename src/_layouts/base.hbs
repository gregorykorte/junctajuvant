<style>
    :root{
      --ink:#111; --ink-lite:#333; --paper:#f7f5f2; --rule:#d8d1c7; --accent:#7a5e3a; --maxw:1100px;
    }
    html,body{height:100%;}
    body{ margin:0; background:var(--paper); color:var(--ink);
      font-family:"Source Serif 4", Georgia, serif;
      line-height:1.5; -webkit-font-smoothing:antialiased; text-rendering:optimizeLegibility;
    }
    .container{max-width:var(--maxw); margin:0 auto; padding:1.25rem;}

    /* Masthead */
    .masthead{ text-align:center; }
    .nameplate{
      font-family:"Cinzel","Newsreader",Georgia,serif; font-weight:700;
      font-size:clamp(2.2rem,6vw,4rem); letter-spacing:.02em; line-height:1;
    }
    .tagline{ margin-top:.35rem; font-size:clamp(.9rem,1.8vw,1.05rem); color:var(--ink-lite); letter-spacing:.02em; }
    .dateline{ margin-top:.35rem; font-variant:small-caps; letter-spacing:.08em; color:var(--ink-lite); }
    .rule{ height:1px; background:var(--rule); margin:1rem 0 1.25rem; }

    /* Weather icon styling */
    .wx .wx-icon {
      width: 1.15em;
      height: 1.15em;
      vertical-align: -0.18em;
      margin-right: .35rem;
      fill: currentColor;
      stroke: currentColor;
    }


    /* Hero base */
    .hero{ overflow:hidden; display:flex; flex-direction:column; }
    .hero img{ width:100%; height:auto; display:block; object-fit:cover; object-position: var(--hero-x,50%) var(--hero-y,50%); }

    /* Layout */
    .grid{ display:grid; grid-template-columns:2fr 1fr; gap:1.25rem; }
    @media (max-width:900px){ .grid{ grid-template-columns:1fr; } }

    .box{ background:#fff; border:1px solid var(--rule); box-shadow:0 1px 0 rgba(0,0,0,.02); }
    .box h2{ margin:0; padding:.6rem .8rem; font-family:"Newsreader",Georgia,serif; font-weight:700; font-size:1.1rem; border-bottom:1px solid var(--rule); }
    .box .content{ padding:.8rem; }
    .muted{ color:#6a645b; }
    .news-list{ list-style:none; margin:0; padding:0; }
    .news-list li{ padding:.6rem 0; border-bottom:1px dotted var(--rule); }
    .news-list li:last-child{ border-bottom:none; }
    .news-list a{ color:inherit; text-decoration:none; }
    .news-list a:hover{ text-decoration:underline; }
    .source{ color:#8c857a; font-size:.85rem; }

    .stat-line{ display:flex; align-items:center; gap:.6rem; flex-wrap:wrap; }
    .temp{ font-family:"Newsreader",Georgia,serif; font-weight:700; font-size:2rem; }
    .wx{ font-size:.95rem; }
    .wx small{ color:#7a7266; }

    .layout{
      display:grid; gap:1.25rem;
      /* Wider middle column for a bigger hero */
      grid-template-columns: 1.4fr 2.8fr 1fr;
      grid-template-areas:"news hero rail"; align-items:start;
    }
    .news{ grid-area:news; } .hero{ grid-area:hero; }
    .rail{ grid-area:rail; display:flex; flex-direction:column; gap:1.25rem; }

    /* Responsive masthead/columns */
    .masthead{ display:flex; align-items:center; justify-content:space-between; gap:1rem; flex-wrap:wrap; text-align:center; }
    .flag-col,.poem-col{ flex:0 0 auto; display:flex; justify-content:center; }
    .title-col{ flex:1 1 auto; }
    .flag-col img{ height:150px; width:auto; max-height:150px; display:block; }

    .nameplate{ white-space:nowrap; line-height:1.1; font-size:clamp(2rem,6vw,3.5rem); }
    .tagline{ white-space:nowrap; line-height:1.2; font-size:clamp(1rem,3.2vw,1.5rem); }
    .dateline{ white-space:nowrap; line-height:1.2; font-size:clamp(.95rem,2.8vw,1.25rem); }
    .poem{ font-style:italic; font-size:.95rem; line-height:1.35; max-width:28rem; }

    @media (max-width:820px){
      .masthead{ flex-direction:column; align-items:center; justify-content:center; }
      .masthead>div{ width:100%; display:flex; justify-content:center; text-align:center; }
      .flag-col img{ height:150px; max-height:150px; width:auto; }
      .title-col{ column-count:1 !important; -webkit-column-count:1 !important; }
      .layout{
        grid-template-columns:1fr;
        grid-template-areas:"news" "hero" "rail";
      }
    }

    /* Hero card text + padding */
    .hero .hero-text { padding:.8rem .8rem 0; }
    .hero-headline { margin:0; font-family:"Newsreader",Georgia,serif; font-weight:700;
      font-size:clamp(1.05rem,2.2vw,1.35rem); line-height:1.15; }
    .hero-headline a { color:#111; text-decoration:none; font-weight:700; }
    .hero-headline a:hover { text-decoration:underline; }

    .hero-meta.source { margin-top:.25rem; } /* use same styling as rail via .source */

    .hero-desc { padding:.6rem .8rem .8rem; color:#333; font-size:.98rem; line-height:1.35;
      display:-webkit-box; -webkit-line-clamp:5; -webkit-box-orient:vertical; overflow:hidden; }

    /* Align hero box top edge with other boxes (which have <h2> padding) */
    /* Remove the default <figure> margins so its top aligns with the other boxes */
    .box.hero, .hero { margin: 0; }

    /* Keep the top interior inset so text aligns visually with <h2> boxes */
    .box.hero { padding-top: .6rem; }

    /* Image/text padding */
    .hero .hero-text  { padding: .8rem .8rem 0; }
    .hero .hero-media { padding: .6rem .8rem; }
    .hero .hero-media img { display:block; width:100%; height:auto; border-radius:2px; }

    /* Let the description expand (no line clamp) */
    .hero-desc { padding: .4rem .8rem .8rem; color:#333; font-size:.98rem; line-height:1.5; 
      display:block; overflow:visible; }

    footer{ margin:2rem 0 1rem; text-align:center; color:#8a8074; font-size:.85rem; }

    /* Ensure masthead lines actually break on small screens */
    .title-col .nameplate,
    .title-col .tagline,
    .title-col .dateline {
      display: block;              /* belt-and-suspenders */
    }

    @media (max-width: 820px) {
      .title-col .nameplate,
      .title-col .tagline,
      .title-col .dateline {
        white-space: normal;       /* allow wrapping */
      }
      .title-col .tagline { margin-bottom: .2rem; }
      .title-col .dateline { margin-top: .2rem; }
    }


  </style>
